// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid()) @db.Uuid
  version   Int
  password  String?
  login     String
  createdAt Int
  updatedAt Int
}

model Artist {
  id     String  @unique
  name   String
  grammy Boolean
  Album  Album[]
}

model Album {
  id       String @unique
  name     String
  year     Int
  artist   Artist? @relation(fields: [artistId], references: [id])
  artistId String?
}
